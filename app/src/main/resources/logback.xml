<?xml version="1.0" encoding="UTF-8"?>

<!-- Referências: https://logback.qos.ch/manual/layouts.html#WhatIsALayout? -->

<configuration>
  <!-- Nome da aplicação -->
  <property name="APP_NAME" value="app-java" />

  <!-- Formatação dos logs -->
  <property name="LOG_PATTERN" value="%boldGreen(%d{dd/MM/yyyy}) - %boldGreen(%d{HH:mm:ss})  %highlight(%-5level)  [THREAD] %boldRed(%thread)  [LOGGER] %boldMagenta(%logger{26})  [TRACE] %X{trace_id}  [SPAN] %X{span_id} - %yellow(%message) %n" />

  <!-- Expositor de logs no console -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Gravação de logs em arquivo -->
  <appender name="file" class="ch.qos.logback.core.FileAppender">
    <!-- Nome do arquivo de saída -->
    <file>${APP_NAME}.log</file>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Definição do logger principal-->
  <root level="DEBUG">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="file"/>
  </root>
</configuration>
